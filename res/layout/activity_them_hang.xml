<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quan_ly_don_hang.ThemHangActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm" />

        <EditText
            android:id="@+id/txtTenSP_ThemSP"
            android:layout_width="336dp"
            android:layout_height="wrap_content" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tv_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục" />

        <Spinner
            android:id="@+id/spinnerDM"
            android:layout_width="336dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_giasp_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng" />

        <EditText
            android:id="@+id/txtSoluong_ThemSP"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/tv_tensp_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá cả" />

        <EditText
            android:id="@+id/txtGiaca_ThemSP"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/ibnCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/photo_camera" />

            <ImageButton
                android:id="@+id/ibnFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/folder" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="72dp"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/btnLuu_ThemSP"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imgHinh"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="14dp"
        android:background="#FF9900"
        android:text="Lưu"
        android:textStyle="bold"
        android:width="120dp" />

    <ImageView
        android:id="@+id/imgHinh"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_weight="5.82"
        android:src="@drawable/picture" />

</RelativeLayout>
