<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:background="#CCFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quan_ly_don_hang.ThemHangActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm" 
             android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/txtTenSP_EditSP"
            android:layout_width="309dp"
            android:layout_height="wrap_content" >

            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục" />

        <Spinner
            android:id="@+id/spinnerDM_EditSP"
            android:layout_width="306dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng" />

        <EditText
            android:id="@+id/txtSoluong_ThemSP_EditSP"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá cả" />

        <EditText
            android:id="@+id/txtGiaca_ThemSP_EditSP"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/ibnCamera_EditSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   
                android:src="@drawable/photo_camera" />

            <ImageButton
                android:id="@+id/ibnFolder_EditSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    
                android:src="@drawable/folder" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="72dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.82" >
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnDelete_EditSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/btnEdit_ThemSP_EditSP"
        android:layout_weight="5.82"
        android:background="#FF9900"
        android:text="Xóa"
        android:textColorLink="#000011"
        android:textStyle="bold"
        android:width="120dp" />

    <Button
        android:id="@+id/btnEdit_ThemSP_EditSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDelete_EditSP"
        android:layout_alignBottom="@+id/btnDelete_EditSP"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/imgHinh_EditSP"
        android:layout_marginRight="100dp"
        android:layout_marginTop="35dp"
        android:layout_weight="5.82"
        android:background="#FF9900"
        android:text="Sửa"
        android:textColorLink="#000011"
        android:textStyle="bold"
        android:width="120dp" />

    <ImageView
        android:id="@+id/imgHinh_EditSP"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="88dp"
     
        android:layout_weight="5.82"
        android:src="@drawable/picture" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="QUẢN LÝ SẢN PHẨM"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>
